<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.com.bulat.trackergps.fragments.ViewTrackFragment">

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#80FFFFFF"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        tools:text="Date: 01.01.2023 13:00"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#80FFFFFF"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        tools:text="@string/timer_string"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tvData"
        app:layout_constraintTop_toBottomOf="@id/tvData"/>

    <TextView
        android:id="@+id/tvAvrVelocity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#80FFFFFF"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        tools:text="Average velocity: 3.5 km/h"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tvData"
        app:layout_constraintTop_toBottomOf="@id/tvTime"/>

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#80FFFFFF"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        tools:text="Distance: 3.5 km"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/tvData"
        app:layout_constraintTop_toBottomOf="@id/tvAvrVelocity"/>

</androidx.constraintlayout.widget.ConstraintLayout>