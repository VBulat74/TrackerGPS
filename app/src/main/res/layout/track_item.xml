<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginTop="3dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/anton"
            android:textColor="@color/blue_darck"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="01.01.2023 13:00" />

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10.5 km."
            android:fontFamily="@font/anton"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvDate"/>

        <ImageView
            android:id="@+id/icSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_speed"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/tvDate"
            app:layout_constraintTop_toBottomOf="@id/tvDate"/>

        <TextView
            android:id="@+id/tvAvrVelocity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Speed: 15.3 km.h"
            android:fontFamily="@font/amiko_semibold"
            android:textColor="@color/blue_darck"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/icSpeed"
            app:layout_constraintTop_toTopOf="@id/icSpeed"
            app:layout_constraintBottom_toBottomOf="@id/icSpeed"/>

        <ImageView
            android:id="@+id/icTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_time"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/icSpeed"
            app:layout_constraintStart_toStartOf="@id/icSpeed"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Time: 00:00:00"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/amiko_semibold"
            android:textColor="@color/blue_darck"
            app:layout_constraintTop_toTopOf="@id/icTime"
            app:layout_constraintBottom_toBottomOf="@id/icTime"
            app:layout_constraintStart_toEndOf="@id/icTime"/>

        <ImageButton
            android:id="@+id/ibDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_delete"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="@id/tvDistance"
            app:layout_constraintStart_toStartOf="@id/tvDistance"
            app:layout_constraintTop_toBottomOf="@id/tvDistance"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>